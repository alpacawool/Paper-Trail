<!-- Buy Dialog -->
<div class="modal fade" id="buyDialog" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="buyDialogTitle">Buy</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
            <div class="row">
                <div class="col">
                    <input type="text" class="form-control" id="buyQuantity"  placeholder="Quantity">
                </div>
                <div class="col">
                     <select class="custom-select" required>
                        <option value="">Select a stock..</option>
                        <option value="1">Stock 1</option>
                        <option value="2">Stock 2</option>
                        <option value="3">Stock 3</option>
                      </select>   
                </div>

            </div>    
      </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-success">Buy</button>
        </div>
       </form>
    </div>
  </div>
</div>

<!-- Sell Dialog -->
