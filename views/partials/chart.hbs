<div id="buy-sell-container">
  <button type="button" class="btn btn-success btn-lg" id="buyButton" data-toggle="modal" data-target="#buyDialog"}>
    Buy
  </button>
  <button type="button" class="btn btn-danger btn-lg" id="sellButton" data-toggle="modal" data-target="#sellDialog"}>
